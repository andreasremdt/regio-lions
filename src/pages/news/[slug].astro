---
import { Picture } from "astro:assets";
import Hero from "@/components/hero.astro";
import Layout from "@/layout/default.astro";
import { getNews } from "@/lib/utils";

export async function getStaticPaths() {
  let news = await getNews(true);

  return news.map((entry) => ({
    params: { slug: entry.slug },
    props: { entry },
  }));
}

let { entry } = Astro.props;
let { Content } = await entry.render();
---

<Layout>
  <Hero title={entry.data.title}>{entry.data.excerpt} </Hero>

  <div class="mx-auto md:w-2/3">
    {
      entry.data.image ? (
        <figure class="mb-12 md:-mx-24 xl:-mx-52">
          <Picture
            src={entry.data.image.src}
            formats={["avif", "webp"]}
            alt={entry.data.image.alt || ""}
            width={1200}
            quality={80}
            height={800}
            class="mb-4 w-full rounded-xl object-cover object-center shadow-lg"
          />

          {entry.data.image.caption ? (
            <figcaption class="flex">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                fill="none"
                viewBox="0 0 24 24"
                aria-hidden="true"
                stroke-width="1.5"
                stroke="currentColor"
                class="mr-2 h-5 w-5 flex-shrink-0 text-gray-400"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  d="m11.25 11.25.041-.02a.75.75 0 0 1 1.063.852l-.708 2.836a.75.75 0 0 0 1.063.853l.041-.021M21 12a9 9 0 1 1-18 0 9 9 0 0 1 18 0Zm-9-3.75h.008v.008H12V8.25Z"
                />
              </svg>
              <p class="text-sm text-gray-500">{entry.data.image.caption}</p>
            </figcaption>
          ) : null}
        </figure>
      ) : null
    }

    <div
      class="prose max-w-none prose-a:rounded-sm prose-a:text-primary-900 prose-a:no-underline hover:prose-a:underline focus-visible:prose-a:outline focus-visible:prose-a:outline-2 focus-visible:prose-a:outline-offset-2 prose-img:rounded-xl prose-img:shadow-xl prose-video:w-full prose-video:rounded-xl prose-video:shadow-xl"
    >
      <Content />
    </div>

    {
      entry.data.gallery ? (
        <figure class="mt-6 grid grid-cols-2 gap-4 md:mt-12 md:grid-cols-3 md:gap-8">
          {entry.data.gallery.map((image) => (
            <a
              href={image.src}
              data-fancybox="gallery"
              class="bg-grey-100 focus-visible:outline-3 group overflow-hidden rounded-xl focus-visible:outline-none focus-visible:outline-offset-2 focus-visible:outline-primary-900 "
            >
              <Picture
                src={image.src}
                formats={["avif", "webp"]}
                alt={image.alt || ""}
                width={400}
                height={350}
                quality={80}
                class="aspect-[4/3] object-cover shadow-lg transition-transform duration-300 group-hover:scale-110"
              />
            </a>
          ))}
        </figure>
      ) : null
    }
  </div>
</Layout>

<script>
  import { Fancybox } from "@fancyapps/ui";

  Fancybox.bind("[data-fancybox]");
</script>
