---
import { Picture } from "astro:assets";
import { formatDate } from "@/lib/utils";

interface Props {
  title: string;
  href: string;
  date?: Date;
  image?: string;
  external?: boolean;
}

let { title, date, image, href, external } = Astro.props;
---

<article
  class="focus-within:outline-3 group relative min-h-52 overflow-hidden rounded-xl shadow-lg after:absolute after:inset-0 after:z-0 after:rounded-xl after:bg-gradient-to-b after:from-transparent after:to-gray-900/80 focus-within:outline focus-within:outline-offset-2 focus-within:outline-primary-900 md:aspect-square"
>
  {
    image && (
      <Picture
        src={image}
        formats={["avif", "webp"]}
        alt=""
        width={400}
        quality={80}
        height={400}
        class="aspect-square h-full max-h-72 w-full object-cover transition-transform duration-500 group-hover:scale-110 sm:max-h-none"
      />
    )
  }

  <div
    class="absolute inset-0 z-10 flex flex-col justify-end p-4 md:px-8 md:py-6"
  >
    {
      date ? (
        <time datetime={date.toISOString()} class="mb-1 text-gray-200">
          {formatDate(date)}
        </time>
      ) : null
    }
    <h3 class="h4">
      <a
        href={href}
        rel={external ? "noopener nofollow noreferrer" : undefined}
        target={external ? "_blank" : undefined}
        class="text-white after:absolute after:inset-0 focus-visible:outline-none"
        >{title}</a
      >
    </h3>
  </div>
</article>
