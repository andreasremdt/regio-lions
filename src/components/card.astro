---
import { Picture } from "astro:assets";
import { formatDate } from "@/lib/utils";

interface Props {
  title: string;
  href: string;
  date?: Date;
  image?: string;
  external?: boolean;
}

let { title, date, image, href, external } = Astro.props;
---

<article
  class="focus-within:outline-3 group relative aspect-[5/3] overflow-hidden rounded-xl shadow-lg after:absolute after:inset-0 after:z-0 after:rounded-xl after:bg-gradient-to-b after:from-transparent after:to-gray-900/80 focus-within:outline focus-within:outline-offset-2 focus-within:outline-primary-900 md:aspect-square"
>
  {
    image ? (
      <Picture
        src={image}
        formats={["avif", "webp"]}
        alt=""
        width={400}
        quality={80}
        height={400}
        class="aspect-square h-full w-full object-cover transition-transform duration-500 group-hover:scale-110 sm:max-h-none"
      />
    ) : (
      <span
        aria-hidden="true"
        class="flex h-full flex-col items-center justify-center rounded-xl text-sm text-gray-500 transition-transform group-hover:scale-110"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          viewBox="0 0 512 512"
          width="48"
          height="48"
          class="mb-2 text-gray-300"
        >
          <path
            fill="currentColor"
            d="M448 80c8.8 0 16 7.2 16 16V415.8l-5-6.5-136-176c-4.5-5.9-11.6-9.3-19-9.3s-14.4 3.4-19 9.3L202 340.7l-30.5-42.7C167 291.7 159.8 288 152 288s-15 3.7-19.5 10.1l-80 112L48 416.3l0-.3V96c0-8.8 7.2-16 16-16H448zM64 32C28.7 32 0 60.7 0 96V416c0 35.3 28.7 64 64 64H448c35.3 0 64-28.7 64-64V96c0-35.3-28.7-64-64-64H64zm80 192a48 48 0 1 0 0-96 48 48 0 1 0 0 96z"
          />
        </svg>
        Kein Bild verf√ºgbar
      </span>
    )
  }

  <div
    class="absolute inset-0 z-10 flex flex-col justify-end p-4 md:px-8 md:py-6"
  >
    {
      date ? (
        <time datetime={date.toISOString()} class="mb-1 text-gray-200">
          {formatDate(date)}
        </time>
      ) : null
    }
    <h3 class="h4">
      <a
        href={href}
        rel={external ? "noopener nofollow noreferrer" : undefined}
        target={external ? "_blank" : undefined}
        class="text-white after:absolute after:inset-0 focus-visible:outline-none"
        >{title}</a
      >
    </h3>
  </div>
</article>
